rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de usuários
    match /usuarios/{userId} {
      // Permite leitura e escrita apenas para o próprio usuário autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permite criar um novo documento de usuário durante o cadastro
      allow create: if request.auth != null && request.auth.uid == userId
        && validateUserData();
    }
    
    // Regras para a coleção de benefícios
    match /beneficio/{beneficioId} {
      // Permite apenas leitura para usuários autenticados
      allow read: if request.auth != null;
      
      // Nega escrita para usuários (benefícios são gerenciados via admin)
      allow write: if false;
    }
    
    // Função para validar dados do usuário
    function validateUserData() {
      let data = request.resource.data;
      return data.keys().hasAll(['id', 'nome', 'data_atualizacao', 'exercicios_minutos', 'exercicios_dias'])
        && data.id is string
        && data.nome is string
        && data.data_atualizacao is timestamp
        && data.exercicios_minutos is number
        && data.exercicios_dias is number
        && data.exercicios_minutos >= 0
        && data.exercicios_dias >= 0;
    }

    // Regra padrão: negar acesso a outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}